    <%- include('./partials/header')%>
  </header>
  <% if(hasOwnProperty('errMsg')) { %>
  <div class="alert alert-danger" role="alert">
    ISI YANG BENAR
  </div>
  <% } %>
  <form action="/login" method="post">
  <div class="container">
    <div class="form-group">
      <label for="inputUsername">Your Username</label>
      <input name="username" class="form-control" id="emailHelp" aria-describedby="emailHelp" placeholder="Enter your username">
